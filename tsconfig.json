{
  "compileOnSave": false,
	"compilerOptions": {
		"composite": false,
		"declaration": false,
		"declarationMap": false,
		"importHelpers": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"rootDir": "./",
		"noUnusedLocals": false,
		"noLib": false,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"strictNullChecks": false,
		"removeComments": true,
		"lib": ["es2017", "dom", "esnext.asynciterable"],
		"plugins": [
			{
				"name": "tslint-language-service"
			}
		],
		"esModuleInterop": true,
		"preserveConstEnums": true,
    "typeRoots": ["node_modules/@types"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./src",
		"outDir": "./dist",
    "incremental": true,
    "target": "es2017",
    "types": ["node", "reflect-metadata", "jest"],

  },
  "include": ["./src"],
	"files": ["node_modules/@types/node/index.d.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"build",
		"lib",
		"test",
		"__tests__",
		"**/*.test*",
		"**/*.spec*",
		"packages/*/node_modules",
		"packages/*/lib",
		"packages/*/dist",
		"packages/*/build"
	]
}
